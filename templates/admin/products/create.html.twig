{% extends "base.html.twig" %}

{% block title %} BACKOFFICE: Ajouter un produits{% endblock %}

 {% block body %}

    <div class="container my-5">

            <h1 class="display-4 text-center text-white bg-dark shadow-lg rounded col-7 mx-auto my-3"> 
               Ajouter un produit
          </h1>

            <div class="row justify-content-center my-5">

                     {{ form_start(form,  {'attr' : { 'class' : 'col-lg-5 col-md-5 mx-auto py-5'}} ) }}

                        {{ form_row(form.title, {'attr' : { 'placeholder' : 'Saisir un titre', "maxlength" : false, "pattern" : false}, 'label' : "Nom du produit" })}}
                        {{ form_row(form.content, { 'label' : "Description du produit"}, {'attr' : { 'rows' : 12}})}}
                        {{ form_row(form.price, { 'label' : "Prix du produit"})}}
                        {{ form_row(form.picture, {'label' : "Photo du produit"})}}
                        {{ form_row(form.category, {'label' : "Cat√©gorie du produit"})}}

                  
                       <button type="submit" class="btn btn-primary">Ajouter le produit</button>
     
                    {{ form_end(form) }}    

            </div>


    </div>


{% endblock %}